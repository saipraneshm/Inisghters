<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:text="Stop Sensor Tracking"
        android:id="@+id/startSensor"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="182dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Sensor Tracking"
        android:id="@+id/stopSensor"
        tools:layout_conversion_absoluteX="98dp"
        tools:layout_conversion_absoluteY="94dp"
        tools:layout_conversion_absoluteWidth="187dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="6dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/startSensor"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/startSensor"/>

    <Button
        android:text="Navigation"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/navigationDrawerBtn"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startSensor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <TextView
        android:text="Classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClassify"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toRightOf="@+id/navigationDrawerBtn"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/navigationDrawerBtn"
        android:layout_marginRight="29dp"/>


</android.support.constraint.ConstraintLayout>
